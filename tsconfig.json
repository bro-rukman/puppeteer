{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
